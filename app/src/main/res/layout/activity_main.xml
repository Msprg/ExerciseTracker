<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnExercises"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:onClick="openExercises"

        android:drawableTop="@drawable/baseline_fitness_center_black_48"
        android:drawablePadding="0dp"
        android:text="Exercises"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/btnRoutines"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnRoutines"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableTop="@drawable/baseline_event_repeat_black_48"
        android:drawablePadding="0dp"
        android:onClick="openRoutines"
        android:text="Routines"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnExercises"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableTop="@drawable/baseline_event_note_black_48"
        android:drawablePadding="0dp"
        android:onClick="openHistory"
        android:scaleType="fitXY"
        android:text="History"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toStartOf="@+id/btnSchedule"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnExercises" />

    <Button
        android:id="@+id/btnSchedule"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:drawableTop="@drawable/baseline_event_available_black_48"
        android:drawablePadding="0dp"
        android:onClick="openSchedule"
        android:text="Schedule"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHistory"
        app:layout_constraintTop_toBottomOf="@+id/btnRoutines" />

</androidx.constraintlayout.widget.ConstraintLayout>
